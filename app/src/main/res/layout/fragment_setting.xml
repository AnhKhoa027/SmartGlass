<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:showDividers="none">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_input_ip"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/edittext_esp32_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_esp32_ip"
            android:layout_marginBottom="24dp"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:autofillHints="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_tts_volume"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <SeekBar
            android:id="@+id/seekbar_tts_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="100"
            android:layout_marginBottom="24dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_auto_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_auto_connect"
            android:layout_marginBottom="24dp"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_gravity="start" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_info_support"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/btn_app_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_app_info"
            android:layout_marginBottom="12dp"
            android:minWidth="120dp"
            android:paddingHorizontal="24dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>
