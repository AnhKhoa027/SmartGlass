<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="19dp"
        android:text="EdgeSight SmartGlass"
        android:contentDescription="@string/smart_glass"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- Container hiển thị camera + overlay YOLO -->
    <FrameLayout
        android:id="@+id/cam_container"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_below="@id/app_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <!-- ImageView hiển thị frame từ ESP32 WebSocket -->
        <TextureView
            android:id="@+id/camera_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:scaleType="fitXY" />

        <!-- Overlay YOLO -->
        <com.example.smartglass.ObjectDetection.OverlayView
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Icon kính (hiện khi chưa kết nối) -->
        <ImageView
            android:id="@+id/glass_icon"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:src="@drawable/sun_glass"
            android:contentDescription="@string/glass_image"
            android:visibility="visible" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvCameraIp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IP: --"
        android:textSize="20sp"
        android:layout_below="@id/cam_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <!-- Tên thiết bị -->
    <TextView
        android:id="@+id/device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My SmartGlass"
        android:contentDescription="@string/my_smart_glass"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@id/cam_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <!-- Icon bluetooth + wifi -->
    <LinearLayout
        android:id="@+id/icon_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/device_name"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/bluetooth"
            android:contentDescription="@string/icon_bluetooth" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/wifi_icon"
            android:contentDescription="@string/icon_wifi" />
    </LinearLayout>

    <!-- Nút kết nối -->
    <Button
        android:id="@+id/btnConnect"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_below="@id/icon_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Kết nối"
        android:contentDescription="@string/btn_connect"
        android:textSize="45sp"
        android:enabled="true"
        android:backgroundTint="@color/button_on_color"
        android:textColor="#FFFFFF" />
</RelativeLayout>
