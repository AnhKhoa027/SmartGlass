<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="19dp"
        android:text="@string/app_title"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- Container hiển thị camera + overlay YOLO -->
    <FrameLayout
        android:id="@+id/cam_container"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_below="@id/app_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <!-- SurfaceView cho AUSBC USB camera -->
        <TextureView
            android:id="@+id/camera_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <!-- Overlay YOLO -->
        <com.example.smartglass.ObjectDetection.OverlayView
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clickable="false"
            android:focusable="false" />

        <!-- Icon kính (hiện khi chưa kết nối) -->
        <ImageView
            android:id="@+id/glass_icon"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:src="@drawable/sun_glass"
            android:visibility="visible"
            android:contentDescription="@string/glass_icon_desc" />
    </FrameLayout>

    <!-- Tên thiết bị -->
    <TextView
        android:id="@+id/device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/device_name"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@id/cam_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <!-- ✅ Trạng thái USB Camera -->
    <LinearLayout
        android:id="@+id/camera_status_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/device_name"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp">

        <View
            android:id="@+id/camera_status_dot"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/status_dot_gray"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/camera_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/camera_not_connected"
            android:textSize="15sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Nút kết nối -->
    <Button
        android:id="@+id/btnConnect"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_below="@id/camera_status_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/connect_button"
        android:textSize="45sp"
        android:enabled="true"
        android:backgroundTint="@color/button_on_color"
        android:textColor="#FFFFFF" />
</RelativeLayout>
